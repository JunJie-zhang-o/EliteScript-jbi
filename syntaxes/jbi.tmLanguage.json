{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "jbi",
	"scopeName": "source.jbi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include":"#comment"
		},
		{
			"include":"#registers"
		},
		{
			"include":"#var"
		},
		{
			"include":"#constant"
		},
		{
			"include":"#NOPEND"
		}		
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.jbi",
				"match": "\\b(IF|ELSEIF|ELSE|ENDIF|WHILE|CONTINUE|BREAK|JUMP|CALL|LABEL|RET|PAUSE|WAIT|TIMER|TPWRITE|CCOOD|MOVJ|MOVL|MOVC|MOVCA|MOVDRAG|MOVML|CLEAR|INC|DEC|ADD|SUB|MUL|DIV|MOD|AND|OR|NOT|XOR|MFRAME|DIST|SET|SETJOINT|SETPOSE|GETPOS|GETTOOLFRAME|GETUSERFRAME|SETTOOLFRAME|DOUT|DIN|AOUT|AIN|MOUT|MIN|PLUSE|POSEMUL|POSETOJOINT|JOINTTOPOSE|TTINIT|TTSTARTJOINT|TTTARGETJOINT|TTSTOP|SETMLFILE|SAVEVARP|SETPAYLOAD|STARTLUA|STOPLUA|RESTARTLUA|GETLUASTATE|DO|THEN|GETPOSE|POSEINV|LOADML|UNLOADML)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.jbi",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jbi",
					"match": "\\\\"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"begin": "\/\/",
					"end": "\\n",
					"name": "comment.line.double-dash.JBI"
				}
			]
		},
		"registers": {
			"patterns": [{
				"name": "variable.other.member.jbi",
				"match": "(P[0-9]+|V[0-9]+|B[0-9]+|I[0-9]+|D[0-9]+|LB[0-9]+|LI[0-9]+|LD[0-9]+|LP[0-9]+|B#\\(+[0-9]*\\)|OT#\\(+[0-9]*\\)|OG#\\(+[0-9]*\\)|OGH#\\(+[0-9]*\\)|IN#\\(+[0-9]*\\)|IG#\\(+[0-9]*\\)|IGH#\\(+[0-9]*\\)|M#\\(+[0-9]*\\)|MG#\\(+[0-9]*\\)|MGH#\\(+[0-9]*\\)|AO#\\(+[0-9]*\\)|AI#\\(+[0-9]*\\))"
			}]
		},
		"constant": {
			"patterns": [{
				"name": "constant.language.jbi",
				"match": "([0-9]|%|ON|OFF|TRUE|FALSE|-|\\.|CW|CCW|CART|JOINT|ALL|MM/S+|°/S|S|MM+|°|TOOL\\(+[0-9]*\\)|USER#\\(+[0-9]*\\)|TOOL#\\(+[0-9]*\\))"
			}]
		},
		"var": {
			"patterns": [{
				"name": "support.function.jbi",
				"match": "(VJ|V|VR|AV|AVR|DIR|JOB:|T=|SMOOTHNESS{1}|LOOKAHEAD|SMOOTHNESS|M=|X+|Y+|Z+|INDEX|DRAGV|R|POINT[1-3]|ACC|DEC|PL|UNTIL)"
			}]
		},
		"NOPEND": {
			"patterns": [{
				"name": "invalid.jbi",
				"match": "(NOP|END)"
			}]
		}
	}
	
}